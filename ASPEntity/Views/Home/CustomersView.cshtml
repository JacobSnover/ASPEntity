

@{
    ViewBag.Title = "CustomersView";
}

<h2>CustomersView</h2>

<form action="/Home/ListCustomersByID" method="get">
    <h3>Customer ID</h3>
    <input type="text" name="CustomerID" />
    <input type="submit" value="Search by Customer ID" />
</form>

<form action="/Home/ListCustomersByCountry" method="get">
    <h3>Country</h3>
    <select name="Country">
        <option value="Germany">Germany</option>
        <option value="France">France</option>
        <option value="USA">USA</option>
    </select>
    <input type="submit" value="Search by country" />
</form>
<table class="table">
    <tr>
        <th>Customer ID</th>
        <th>Company Name</th>
        <th>City</th>
        <th>Country</th> 
    </tr>
    @foreach (var cust in ViewBag.CustomerList)
    {
        <tr>
            <td>
                @cust.CustomerID
            </td>

            <td>
                @cust.CompanyName
            </td>

            <td>
                @cust.City
            </td>

            <td>
                @cust.Country
            </td>
        </tr>

    }
</table>

